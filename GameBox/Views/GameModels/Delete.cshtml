@model GameBox.Models.GameModel

@{
    ViewData["Title"] = "Delete Game";
}

<div class="text-center mb-4">
    <h1 class="display-4 text-gradient-primary text-bold">Delete Game</h1>
    <p class="lead text-danger">This action cannot be undone!</p>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="game-form-container game-delete-form">
            <div class="form-header-icon delete-icon">
                <span class="icon-badge">⚠️</span>
            </div>
            <h2 class="text-center mb-4 text-danger">Are you sure?</h2>
            <p class="text-center mb-4">You are about to permanently delete this game:</p>
            <hr />
            
            <div class="game-details-display">
                <div class="detail-row">
                    <div class="detail-label">
                        <span class="label-icon">📝</span> Game Name
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>
                
                <div class="detail-row">
                    <div class="detail-label">
                        <span class="label-icon">📖</span> Description
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                </div>
                
                <div class="detail-row" style="display: none">
                    <div class="detail-label">
                        <span class="label-icon">⭐</span> Rating
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Rating) / 10
                    </div>
                </div>
            </div>
            
            <hr />
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-danger w-100 btn-lg delete-confirm-btn">
                        🗑️ Yes, Delete This Game
                    </button>
                </div>
            </form>
            
            <div class="text-center mt-3">
                <a asp-action="Index" class="cancel-link">
                    ✖️ Cancel & Go Back
                </a>
            </div>
        </div>
    </div>
</div>
