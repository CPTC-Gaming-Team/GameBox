@model IEnumerable<GameBox.Models.GameModel>

@{
    ViewData["Title"] = "Game Inventory";
}

<div class="game-inventory-container">
    <div class="inventory-header">
        <h1>Game Inventory</h1>
        <a asp-action="Create" class="btn btn-primary">
            <span class="me-2">+</span>Add New Game
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="games-grid">
            @foreach (var item in Model)
            {
                <div class="game-card">
                    <div class="card-header">
                        <h3 class="game-title">@item.Name</h3>
                    </div>
                    <div class="card-body">
                        <p class="game-description">@item.Description</p>
                        <div class="game-rating">
                            <span class="rating-label">Rating:</span>
                            <span class="rating-value">@item.Rating</span>
                        </div>
                    </div>
                    <div class="card-actions">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                            View
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            Remove
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <p class="empty-message">No games in your inventory yet.</p>
            <a asp-action="Create" class="btn btn-primary">Add Your First Game</a>
        </div>
    }
</div>
